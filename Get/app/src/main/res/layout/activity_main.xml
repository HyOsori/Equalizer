<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="horizontal"
    android:columnCount="4"
    android:rowCount="5"
    tools:context="sjnov11_equalizing.equalizer.MainActivity">


    <Button
        android:text="300HZ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn300Hz"
        android:onClick="onClick" />

    <Button
        android:text="600Hz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn600Hz"
        android:layout_row="1"
        android:layout_column="0"
        android:onClick="onClick" />

    <Button
        android:text="1KHz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn1KHz"
        android:layout_row="2"
        android:layout_column="0"
        android:onClick="onClick" />

    <TextView
        android:text="300평균"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv300HzAverage"
        android:layout_row="0"
        android:layout_column="3" />

    <TextView
        android:text="1k평균"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv1kHzAverage"
        android:layout_row="2"
        android:layout_column="3" />

    <Button
        android:text="2Khz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn2KHz"
        android:onClick="onClick" />

    <TextView
        android:text="2k평균"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv2kHzAverage"
        android:layout_row="3"
        android:layout_column="3" />

    <TextView
        android:text="600측정치"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv600HzAmplitude"
        android:layout_row="1"
        android:layout_column="2" />

    <TextView
        android:text="300측정치"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv300HzAmplitude"
        android:layout_row="0"
        android:layout_column="2" />

    <TextView
        android:text="1k측정치"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv1kHzAmplitude"
        android:layout_row="2"
        android:layout_column="2" />

    <TextView
        android:text="2k측정치"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv2kHzAmplitude"
        android:layout_row="3"
        android:layout_column="2" />

    <TextView
        android:text="600평균"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv600HzAverage"
        android:layout_row="1"
        android:layout_column="3" />


</GridLayout>
